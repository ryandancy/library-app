{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://example.org/schemas/patron.json",
  "title": "Patron",
  "description": "A patron of the library",
  "type": "object",
  "required": ["id", "name", "checkouts"],
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "pic": {
      "type": "string",
      "format": "uri",
      "default": "http://example.org/missing-pic.png"
    },
    "checkouts": {
      "type": "array",
      "items": { "$ref": "checkout.json" },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
}