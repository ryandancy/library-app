{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://example.org/schemas/item.json",
  "title": "Item",
  "description": "An item in the library - book, magazine, ebook, music, etc.",
  "type": "object",
  "properties": {
    "marc": { "$ref": "marc-in-json.json" },
    "status": { "type": "string" },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "barcode": { "type": "string" }
  },
  "required": ["marc", "status", "created"],
  "oneOf": [
    {
      "title": "status is out, checkout is required",
      "properties": {
        "marc": { "$ref": "marc-in-json.json" },
        "checkout": { "$ref": "checkout.json" }
      },
      "required": ["checkout"]
    },
    {
      "title": "status is missing/lost, checkout is optional",
      "properties": {
        "marc": { "$ref": "marc-in-json.json" },
        "checkout": { "$ref": "checkout.json" }
      }
    },
    {
      "title": "status is in, checkout is illegal",
      "properties": {
        "marc": { "$ref": "marc-in-json.json" },
        "status": { "enum": ["in"] },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "barcode": { "type": "string" }
      },
      "additionalProperties": false
    }
  ]
}