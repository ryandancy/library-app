{
  "$schema": "http://json-schema.org/schema#",
  "id": "http://example.org/schemas/admin.json",
  "title": "Administrator",
  "description": "An administrator of the library with a set of permissions",
  "type": "object",
  "required": ["id", "name", "permissions"],
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "permissions": {
      "type": "object",
      "properties": {
        "checkout": { "type": "boolean" },
        "checkin": { "type": "boolean" },
        "createItem": { "type": "boolean" },
        "createUser": { "type": "boolean" },
        "createAdmin": { "type": "boolean" }
      },
      "required": [
        "checkout", "checkin", "createItem", "createUser", "createAdmin"
      ],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}